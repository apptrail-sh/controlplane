{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":separateMajorReleases"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "description": "Group Kotlin updates",
      "groupName": "kotlin",
      "matchPackageNames": [
        "/^org.jetbrains.kotlin/"
      ]
    },
    {
      "description": "Group Spring Boot updates",
      "groupName": "spring-boot",
      "matchPackageNames": [
        "/^org.springframework.boot/"
      ]
    },
    {
      "description": "Group JJWT updates",
      "groupName": "jjwt",
      "matchPackageNames": [
        "/^io.jsonwebtoken:jjwt/"
      ]
    },
    {
      "description": "Group Testcontainers updates",
      "groupName": "testcontainers",
      "matchPackageNames": [
        "/^org.testcontainers/"
      ]
    }
  ]
}
